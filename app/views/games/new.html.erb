<div class="container">
  <h1>New Game</h1>

  <div class="letters">
    <% @letters.each do |letter| %>
      <div class="d-block letter m-5">
        <%= letter.join %>
      </div>
    <% end %>
  </div>

  <p>What is the longest word you can find?</p>

  <form action="/score" method="post" >
    <input type="text" name="userWord" required>
    <input type="submit" value="Submit Word">
    <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
    <input id="letters" name="letters" type="hidden" value="<%= @letters.join %>">
  </form>
</div>
